<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerHigh"
    android:fadeScrollbars="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDetailsProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/element_text"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetailsProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/element_text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/tvDetailsProductName"
            app:layout_constraintTop_toBottomOf="@+id/tvDetailsProductName" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="392dp"
            android:layout_height="392dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDetailsProductPrice"> <!-- Adjust the corner radius as needed -->

            <ImageView
                android:id="@+id/ivDetailsProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDialogProductDescription">

            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="@string/element_number"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/btnBuy"
                app:layout_constraintEnd_toStartOf="@+id/ibtnIncreaseItemQuantity"
                app:layout_constraintTop_toTopOf="@+id/btnBuy" />

            <ImageButton
                android:id="@+id/ibtnIncreaseItemQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/btnBuy"
                app:layout_constraintEnd_toStartOf="@+id/btnBuy"
                app:layout_constraintTop_toTopOf="@+id/btnBuy"
                app:srcCompat="@drawable/ic_plus" />

            <ImageButton
                android:id="@+id/ibtnDecreaseItemQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/btnBuy"
                app:layout_constraintEnd_toStartOf="@+id/tvProductQuantity"
                app:layout_constraintTop_toTopOf="@+id/btnBuy"
                app:srcCompat="@drawable/ic_minus" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/buy_button"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailsProductPrice"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="NotSibling" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvDialogProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/element_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>